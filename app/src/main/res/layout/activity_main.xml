<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f1e0d6">

    <TextView
        android:background="#72a2c0"
        android:id="@+id/textViewCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="50sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:background="#a4a4bf"
        android:id="@+id/textViewStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="85sp"
        android:layout_marginTop="5dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button7"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="70sp"
                />
            <Button
                android:id="@+id/button8"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="70sp"
                />
            <Button
                android:id="@+id/button9"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="70sp"
                />
            <Button
                android:id="@+id/button_div"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="70sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button4"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button5"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button6"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_mul"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="65sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button1"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button2"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button3"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_sub"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="65sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_point"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_0"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_clear1"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_add"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="65sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_mod"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button_powe"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="^"
                android:textSize="65sp"
                />
            <Button
                android:id="@+id/button7_aqrt"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="sq"
                android:textSize="65sp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/button_equal"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="65sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>